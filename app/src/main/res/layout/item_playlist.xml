<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_8dp">

    <ImageView
        android:id="@+id/imv_user_playlist"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="@dimen/spacing_8dp"
        android:scaleType="centerCrop"
        android:background="@drawable/img_border_radius_8dp"/>

    <TextView
        android:id="@+id/tv_user_playlist"
        style="@style/TextAppearance.App.TitleMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_marginBottom="@dimen/spacing_4dp"
        android:textColor="@color/text_primary"/>

    <TextView
        android:id="@+id/tv_song_count"
        style="@style/TextAppearance.App.LabelMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="?attr/colorOnSurfaceVariant"/>

</LinearLayout>