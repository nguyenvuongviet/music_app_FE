<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_8dp"
    android:layout_marginHorizontal="@dimen/spacing_16dp"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_8dp"
    android:gravity="center_vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_notification"
        android:layout_width="@dimen/image_40dp"
        android:layout_height="@dimen/image_40dp"
        android:src="@drawable/cover_picture"
        android:layout_marginEnd="@dimen/spacing_16dp"/>

    <TextView
        android:id="@+id/tv_notification"
        style="@style/TextAppearance.App.BodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sơn Tùng vừa phát hành bài hát chúng ta của hiện tạ"
        android:textColor="?attr/colorOnSurfaceVariant"/>

</LinearLayout>